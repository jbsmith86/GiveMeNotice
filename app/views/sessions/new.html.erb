<div class="content">
  <h1>Sign In</h1>
  <br/>
  <div class="row">
    <div class="col-md-4">
      <%= link_to image_tag("sign-in-with-twitter-gray.png", :border=>0), '/auth/twitter/' %>
      <hr><center>or</center>
      <%= form_tag session_path do %>
        <div class ="form-group">
          <%= label_tag 'email' %>
          <%= email_field_tag 'email', nil, class: 'form-control' %>
        </div>
        <div class ="form-group">
          <%= label_tag 'password' %><br>
          <%= password_field_tag 'password', nil, class: 'form-control' %>
        </div>
        <%= submit_tag 'Sign in', class: 'btn btn-primary btn-lg' %>
      <% end %>
    </div>
  </div>
</div>
